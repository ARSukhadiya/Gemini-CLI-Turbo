# Gemini CLI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Your Google Gemini API key (required)
GEMINI_API_KEY=your_api_key_here

# Gemini model to use
GEMINI_MODEL=gemini-pro

# API base URL (usually don't change this)
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/models/

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# HTTP connection pool size
CONNECTION_POOL_SIZE=20

# Keep-alive timeout in seconds
KEEP_ALIVE_TIMEOUT=60

# Batch size for multiple requests
BATCH_SIZE=5

# Enable request prefetching
PREFETCH_ENABLED=true

# Circuit breaker error threshold (0.0 to 1.0)
CIRCUIT_BREAKER_THRESHOLD=0.5

# Circuit breaker timeout in seconds
CIRCUIT_BREAKER_TIMEOUT=60

# Maximum memory usage in MB
MAX_MEMORY_USAGE=512

# Garbage collection threshold
GC_THRESHOLD=100

# Event loop policy (auto, uvloop, asyncio)
EVENT_LOOP_POLICY=auto

# Maximum worker threads (None for auto)
MAX_WORKERS=

# =============================================================================
# Caching Configuration
# =============================================================================

# Enable response caching
CACHE_ENABLED=true

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum cache entries
CACHE_MAX_SIZE=1000

# Cache eviction strategy (lru, lfu, ttl)
CACHE_STRATEGY=lru

# =============================================================================
# Retry Configuration
# =============================================================================

# Maximum retry attempts
MAX_RETRIES=3

# Initial retry delay in seconds
RETRY_DELAY=1.0

# Retry backoff multiplier
RETRY_BACKOFF=2.0

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Enable performance metrics
METRICS_ENABLED=true

# Prometheus metrics port
METRICS_PORT=9090

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# CLI Configuration
# =============================================================================

# Enable interactive CLI mode
INTERACTIVE_MODE=true

# Output format (rich, plain, json)
OUTPUT_FORMAT=rich

# Show progress bars and spinners
SHOW_PROGRESS=true

# =============================================================================
# Advanced Configuration
# =============================================================================

# Enable response streaming
ENABLE_STREAMING=true

# Streaming chunk size in bytes
CHUNK_SIZE=1024

# Enable HTTP compression
ENABLE_COMPRESSION=true

# =============================================================================
# Redis Cache Configuration (Optional)
# =============================================================================

# Enable Redis caching
REDIS_ENABLED=false

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# =============================================================================
# MongoDB Cache Configuration (Optional)
# =============================================================================

# Enable MongoDB caching
MONGO_ENABLED=false

# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017

# MongoDB database name
MONGO_DATABASE=gemini_cache

# MongoDB collection name
MONGO_COLLECTION=responses

# =============================================================================
# Local Cache Configuration
# =============================================================================

# Enable local in-memory caching
LOCAL_CACHE_ENABLED=true

# Local cache directory
LOCAL_CACHE_PATH=./cache

